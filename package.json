{
  "name": "jsonschema2graphql",
  "version": "1.0.5",
  "description": "Converts JSON schema to GraphQL types",
  "repository": "github:HerbCaudill/jsonschema2graphql",
  "homepage": "https://github.com/HerbCaudill/jsonschema2graphql#readme",
  "bugs": {
    "url": "https://github.com/HerbCaudill/jsonschema2graphql/issues"
  },
  "author": {
    "name": "Herb Caudill",
    "email": "herb@devresults.com"
  },
  "license": "MIT",
  "keywords": [
    "json-schema",
    "graphql"
  ],
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "scripts": {
    "all": "run-s reset test doc:html",
    "build": "tsc -p tsconfig.json",
    "clean": "trash build",
    "doc:html": "typedoc src/ --target ES6 --mode file --out build/docs",
    "doc:json": "typedoc src/ --target ES6 --mode file --json build/docs/typedoc.json",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "doc": "run-s doc:html && opn build/docs/index.html",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "fix": "run-s fix:*",
    "prepare-release": "run-s all doc:publish",
    "reset": "git clean -dfx && git reset --hard && yarn install",
    "lint": "tslint --project . && prettier \"src/**/*.ts\" --list-different",
    "test": "jest",
    "watch": "run-s clean build:main && run-p \"build:main -- -w\" \"test --watch\""
  },
  "engines": {
    "node": ">=8.9"
  },
  "dependencies": {
    "ajv": "^6.5.4",
    "babel-jest": "^23.6.0",
    "camelcase": "^5.0.0",
    "fs-extra": "^7.0.0",
    "graphql": "^14.0.2",
    "jest-diff": "^23.6.0",
    "jest-matcher-utils": "^23.6.0",
    "lodash": "^4.17.11",
    "pluralize": "^7.0.0",
    "ramda": "^0.25.0",
    "uppercamelcase": "^3.0.0"
  },
  "devDependencies": {
    "@types/camelcase": "^4.1.0",
    "@types/fs-extra": "^5.0.4",
    "@types/graphql": "^14.0.1",
    "@types/jest": "^23.3.1",
    "@types/jest-diff": "^20.0.0",
    "@types/jest-matcher-utils": "^21.0.1",
    "@types/json-schema": "^7.0.1",
    "@types/pluralize": "^0.0.29",
    "@types/ramda": "^0.25.38",
    "@types/uppercamelcase": "^3.0.0",
    "gh-pages": "^2.0.0",
    "jest": "22.4.2",
    "npm-run-all": "^4.1.3",
    "opn-cli": "^3.1.0",
    "prettier": "^1.14.3",
    "tmp-promise": "^1.0.5",
    "trash-cli": "^1.4.0",
    "ts-jest": "22.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typedoc": "^0.12.0",
    "typescript": "^3.0.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "roots": [
      "<rootDir>/src",
      "<rootDir>/test"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/?(*.)test.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/test/matchers/index.ts"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
